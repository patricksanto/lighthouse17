<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="nl.saxion.re.sponsorrun.controllers.MainMenuController"
            style="-fx-background-color: white;">

    <!-- Top Menu -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #dcdcdc; -fx-padding: 10;">
            <Label text="Lighthouse App" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Home" onAction="#goHome"/>
            <Button text="Tournaments" onAction="#goTournaments"/>
            <Button text="Teams" onAction="#goTeams"/>
            <Button text="Schedule" onAction="#goSchedule"/>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>

</BorderPane>
